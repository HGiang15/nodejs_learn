<div class='container mt-4'>
  <!-- Tiêu đề chính -->
  <h3 class='home-heading text-center mb-2'>Khám phá các khóa học nổi bật</h3>

  {{> search-bar }}

  {{> filter-bar }}

  <!-- Danh sách khóa học -->
  <div class='row card-list'>
    {{#each courses}}
      <div class='col-sm-6 col-lg-4'>
        <div class='home-card card card-course-item'>
          <a href='/courses/{{this.slug}}'>
            <img
              src='{{this.image}}'
              class='home-img card-img-top'
              alt='Hình ảnh khóa học'
            />
          </a>
          <div class='home-body card-body'>
            <a href='/courses/{{this.slug}}'>
              <h5 class='card-title'>{{this.name}}</h5>
            </a>
            <p class='card-text'>{{this.description}}</p>
            <a href='/courses/{{this.slug}}' class='btn btn-primary'>Mua khóa
              học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>